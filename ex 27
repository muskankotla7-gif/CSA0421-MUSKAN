#include <stdio.h>
#include <unistd.h>

int main() {
    pid_t pid;

    pid = fork();   // Create a new process

    if (pid < 0) {
        printf("Fork failed\n");
    }
    else if (pid == 0) {
        // Child Process
        printf("Child Process:\n");
        printf("PID  = %d\n", getpid());
        printf("PPID = %d\n", getppid());
    }
    else {
        // Parent Process
        printf("Parent Process:\n");
        printf("PID  = %d\n", getpid());
        printf("PPID = %d\n", getppid());
    }

    return 0;
}
output
--- Parent Process ---
PID  = 4567
PPID = 3210

--- Child Process ---
PID  = 4568
PPID = 4567
