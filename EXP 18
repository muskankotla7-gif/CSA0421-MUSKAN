#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, req[20], i, j, temp, total=0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter requests:\n");
    for (i = 0; i < n; i++) scanf("%d", &req[i]);

    printf("Enter head position: ");
    scanf("%d", &head);

    // Sort requests
    for (i = 0; i < n-1; i++)
        for (j = 0; j < n-i-1; j++)
            if (req[j] > req[j+1]) {
                temp = req[j];
                req[j] = req[j+1];
                req[j+1] = temp;
            }

    int index = 0;
    while (index < n && req[index] < head) index++;

    // Move right
    for (i = index; i < n; i++) {
        total += abs(req[i] - head);
        head = req[i];
    }

    // Move left
    for (i = index - 1; i >= 0; i--) {
        total += abs(req[i] - head);
        head = req[i];
    }

    printf("Total head movement = %d\n", total);
}
