#include <stdio.h>

int main() {
    int n, i, j;
    float avgWT = 0, avgTAT = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    int BT[n], WT[n], TAT[n], P[n];

    // Process numbers
    for (i = 0; i < n; i++) {
        P[i] = i + 1;
    }

    // Input burst times
    printf("Enter Burst Time for each process:\n");
    for (i = 0; i < n; i++) {
        printf("P%d: ", i + 1);
        scanf("%d", &BT[i]);
    }

    // Sort processes by burst time (SJF)
    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (BT[i] > BT[j]) {
                int temp = BT[i];
                BT[i] = BT[j];
                BT[j] = temp;

                temp = P[i];
                P[i] = P[j];
                P[j] = temp;
            }
        }
    }

    // Waiting time
    WT[0] = 0;
    for (i = 1; i < n; i++) {
        WT[i] = WT[i - 1] + BT[i - 1];
    }

    // Turnaround time
    for (i = 0; i < n; i++) {
        TAT[i] = WT[i] + BT[i];
    }

    // Average values
    for (i = 0; i < n; i++) {
        avgWT += WT[i];
        avgTAT += TAT[i];
    }

    avgWT /= n;
    avgTAT /= n;

    // Display Output
    printf("\nProcess\tBT\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", P[i], BT[i], WT[i], TAT[i]);
    }

    printf("\nAverage Waiting Time     = %.2f", avgWT);
    printf("\nAverage Turnaround Time  = %.2f\n", avgTAT);

    return 0;
}
INPUT
Enter number of processes: 4
Enter Burst Time:
P1: 6
P2: 8
P3: 7
P4: 3

OUTPUT
Process BT  WT  TAT
P4       3   0   3
P1       6   3   9
P3       7   9   16
P2       8   16  24

Average Waiting Time     = 7.00
Average Turnaround Time  = 13.00
