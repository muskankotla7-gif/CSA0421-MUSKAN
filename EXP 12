#include<stdio.h>
#include<unistd.h>
#include<string.h>

int main() {
    int fd[2];
    pipe(fd);
    char msg[] = "Hello from Parent!", buffer[50];

    if(fork() == 0) {
        close(fd[1]); 
        read(fd[0], buffer, sizeof(buffer));
        printf("Child received: %s\n", buffer);
    } else {
        close(fd[0]);
        write(fd[1], msg, strlen(msg)+1);
    }
    return 0;
}
OUT PUT
Child received: Hello from Parent!
